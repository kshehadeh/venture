{
  "name": "venture",
  "version": "0.0.1",
  "description": "Venture TUI game engine monorepo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tui": "bun run packages/tui/src/main.tsx",
    "editor": "bun run packages/editor/src/cli.ts",
    "build": "bun run --filter=* build",
    "lint": "oxlint && bun run --filter=* typecheck",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "typecheck": "bun run --filter=* typecheck",
    "test": "bun run --filter=* test",
    "knip": "knip"
  },
  "devDependencies": {
    "@types/bun": "1.3.5",
    "@types/node": "25.0.3",
    "knip": "5.79.0",
    "oxfmt": "0.20.0",
    "oxlint": "1.35.0",
    "oxlint-tsgolint": "0.10.0",
    "typescript": "5.9.3"
  },
  "trustedDependencies": [
    "@ziglang/cli"
  ]
}
